        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OAuthWpfApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="1000">
    <Grid>
        <RadioButton x:Name="SysRadio" Content="System Web Browser" Margin="815,26,-15,494" IsChecked="True"/>

        <Button x:Name="LoginButton" Content="Login" Margin="560,25,200,494" Click="LoginButton_ClickAsync"/>
